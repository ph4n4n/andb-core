{
  "name": "@the-andb/core-nest",
  "version": "0.0.1",
  "description": "The Andb Core Engine - Rebuilt with NestJS",
  "author": "The Andb (ph4n4n)",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "andb": "dist/cli/main.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node src/index.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "cli": "ts-node src/cli/main.ts",
    "export:dev:fn": "andb export -f DEV",
    "export:dev:sp": "andb export -p DEV",
    "export:dev:tbl": "andb export -t DEV",
    "export:dev:trg": "andb export -tr DEV",
    "export:dev:views": "andb export -v DEV",
    "export:dev:events": "andb export -e DEV",
    "export:dev": "npm run export:dev:fn && npm run export:dev:sp && npm run export:dev:tbl && npm run export:dev:trg && npm run export:dev:views && npm run export:dev:events",
    "export:prod:fn": "andb export -f PROD",
    "export:prod:sp": "andb export -p PROD",
    "export:prod:tbl": "andb export -t PROD",
    "export:prod:trg": "andb export -tr PROD",
    "export:prod:views": "andb export -v PROD",
    "export:prod:events": "andb export -e PROD",
    "export:prod": "npm run export:prod:fn && npm run export:prod:sp && npm run export:prod:tbl && npm run export:prod:trg && npm run export:prod:views && npm run export:prod:events",
    "compare:dev:fn": "andb compare -f DEV",
    "compare:dev:sp": "andb compare -p DEV",
    "compare:dev:tbl": "andb compare -t DEV",
    "compare:dev:trg": "andb compare -tr DEV",
    "compare:dev:views": "andb compare -v DEV",
    "compare:dev:events": "andb compare -e DEV",
    "compare:dev:report": "andb compare -r DEV",
    "compare:dev:off": "npm run compare:dev:fn && npm run compare:dev:sp && npm run compare:dev:tbl && npm run compare:dev:trg && npm run compare:dev:views && npm run compare:dev:events && npm run compare:dev:report",
    "compare:dev": "npm run export:dev && npm run compare:dev:off",
    "compare:prod:fn": "andb compare -f PROD",
    "compare:prod:sp": "andb compare -p PROD",
    "compare:prod:tbl": "andb compare -t PROD",
    "compare:prod:trg": "andb compare -tr PROD",
    "compare:prod:views": "andb compare -v PROD",
    "compare:prod:events": "andb compare -e PROD",
    "compare:prod:report": "andb compare -r PROD",
    "compare:prod:off": "npm run compare:prod:fn && npm run compare:prod:sp && npm run compare:prod:tbl && npm run compare:prod:trg && npm run compare:prod:views && npm run compare:prod:events && npm run compare:prod:report",
    "compare:prod": "npm run export:dev && npm run export:prod && npm run compare:prod:off",
    "generate": "andb generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "andb-logger": "^1.0.3",
    "better-sqlite3": "^12.4.6",
    "commander": "^11.1.0",
    "diff": "^5.1.0",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.1",
    "mysql2": "^3.14.3",
    "nest-commander": "^3.12.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ssh2": "^1.15.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/diff": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.3.1",
    "@types/ssh2": "^1.11.0",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}